@page "/randomImage"

<PageTitle>Random image</PageTitle>

<h1>Random image</h1>

<div style="margin: auto auto 10px auto;">
    <img class="random-image" alt="Random image number @randomNumber" src=@($"img/random_img/rnd_{randomNumber}.jpg") />
</div>

<div class="alert alert-warning p-2" style="width: 500px;" role="alert"><b>@randomNumber</b> image from @finish</div>

<button class="btn btn-primary" @onclick="ReplaceWithRandom">Get random image</button>

@code {

private int randomNumber = 1;
private int start = 1;
private int finish = 15;

private void ReplaceWithRandom()
{
Random rand = new Random();
randomNumber = rand.Next(start, finish + 1);
StateHasChanged();
}

}